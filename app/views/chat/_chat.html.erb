<div class='active-admin-chat__chat'>
  <div class='active-admin-chat__conversations-list-container'>
    <h3 class='active-admin-chat__title'><%= ActiveAdminChat.conversation_relation_name.pluralize.capitalize %></h3>
    <ul class='active-admin-chat__conversations-list'>
      <% conversations.each do |conversation| %>
        <li class='active-admin-chat__conversation-item' id='conversation-<%= conversation.id %>'>
          <%= conversation.public_send(:"#{ActiveAdminChat.user_relation_name}").email %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class='active-admin-chat__conversation-history-container'>
    <div class='active-admin-chat__conversation-history'></div>
    <div class='active-admin-chat__send-message-container'>
      <input type='text' id='send-message' placeholder="Send message" />
    </div>
  </div>
</div>

<script>
  window.ActiveAdminChat = window.ActiveAdminChat || {};
  window.ActiveAdminChat.conversationEndpoint = '<%= "/#{ActiveAdminChat.namespace}/#{ActiveAdminChat.page_name}/" %>';
</script>
